<UserControl
    x:Class="WPF_BankCustomerSystem.UserControls.UCPager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_BankCustomerSystem.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="40"
    d:DesignHeight="40"
    d:DesignWidth="870"
    mc:Ignorable="d">
    <Grid>
        <WrapPanel VerticalAlignment="Center">
            <Button
                x:Name="btnFirst"
                Margin="0,0,0,0"
                Click="btnFirst_Click"
                Content="首页"
                Style="{StaticResource ButtonDefaultTemplate}" />
            <Button
                x:Name="btnPrev"
                Margin="10,0,0,0"
                Click="btnPrev_Click"
                Content="前一页"
                Style="{StaticResource ButtonDefaultTemplate}" />
            <TextBlock
                Name="tbPageAndTotakPage"
                Margin="10,0"
                Style="{StaticResource TextBlockStyle}" />

            <Button
                x:Name="btnNext"
                Margin="20,0,0,0"
                Click="btnNext_Click"
                Content="后一页"
                Style="{StaticResource ButtonDefaultTemplate}" />
            <Button
                x:Name="btnLast"
                Margin="10,0,0,0"
                Click="btnLast_Click"
                Content="末页"
                Style="{StaticResource ButtonDefaultTemplate}" />
            <TextBlock
                Margin="10,0"
                Style="{StaticResource TextBlockStyle}"
                Text="条数：" />

            <ComboBox
                Name="cbbPageSize"
                Width="60"
                VerticalContentAlignment="Center"
                SelectionChanged="cbbPageSize_SelectionChanged"
                Style="{StaticResource ComboBoxCornerStyle}">
                <ComboBoxItem Content="10" />
                <ComboBoxItem Content="20" />
                <ComboBoxItem Content="30" />
                <ComboBoxItem Content="40" />
                <ComboBoxItem Content="50" />
            </ComboBox>

            <TextBlock
                Margin="10,0,0,0"
                Style="{StaticResource TextBlockStyle}"
                Text="页码：" />
            <TextBox
                Name="txtPage"
                Width="80"
                Margin="0,0,0,0"
                HorizontalContentAlignment="Center"
                PreviewTextInput="txtPage_PreviewTextInput"
                Style="{StaticResource TextBoxStyle}"
                Template="{DynamicResource TextBoxCornerTemplate}" />
            <Button
                Name="btnGo"
                Width="50"
                Margin="10,0,0,0"
                Click="btnGo_Click"
                Content="跳转"
                Style="{StaticResource ButtonDefaultTemplate}" />
        </WrapPanel>
    </Grid>
</UserControl>
